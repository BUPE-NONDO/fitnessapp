rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT-FRIENDLY RULES - More open for testing and development

    // Helper functions for validation
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isValidUser() {
      return isAuthenticated();
      // Simplified validation - allow any user data structure
    }

    function isValidUserUpdate() {
      return isAuthenticated();
      // Simplified validation - allow any updates
    }

    function isValidGoal() {
      return isAuthenticated();
      // Simplified goal validation - allow any goal structure
    }

    function isValidLog() {
      return isAuthenticated();
      // Simplified log validation - allow any log structure
    }

    // OPEN USER ACCESS - Allow authenticated users to manage their own data
    match /users/{userId} {
      allow read, write: if isAuthenticated();
      // More open for development - allow any authenticated user operations

      // User subcollections - allow full access for development
      match /{subcollection}/{docId} {
        allow read, write: if isAuthenticated();
      }

      // Explicit daily_goals subcollection access
      match /daily_goals/{goalId} {
        allow read, write: if isAuthenticated();
      }

      // Explicit workout_plans subcollection access
      match /workout_plans/{planId} {
        allow read, write: if isAuthenticated();
      }

      // Explicit onboarding_data subcollection access
      match /onboarding_data/{dataId} {
        allow read, write: if isAuthenticated();
      }
    }

    // OPEN COLLECTION ACCESS - Allow authenticated users full access for development
    match /user_stats/{userId} {
      allow read, write: if isAuthenticated();
    }

    match /activity_logs/{logId} {
      allow read, write: if isAuthenticated();
    }

    match /goals/{goalId} {
      allow read, write: if isAuthenticated();
    }

    match /logs/{logId} {
      allow read, write: if isAuthenticated();
    }

    match /badges/{badgeId} {
      allow read, write: if isAuthenticated();
    }

    match /workout_routines/{routineId} {
      allow read, write: if isAuthenticated();
    }

    match /workout_sessions/{sessionId} {
      allow read, write: if isAuthenticated();
    }

    match /workout_plans/{planId} {
      allow read, write: if isAuthenticated();
    }

    // SHARED RESOURCES - Allow read/write for development
    match /exercises/{exerciseId} {
      allow read, write: if isAuthenticated();
    }

    match /badgeDefinitions/{badgeDefId} {
      allow read, write: if isAuthenticated();
    }

    match /metadata/{docId} {
      allow read, write: if isAuthenticated();
    }

    match /admins/{adminId} {
      allow read, write: if isAuthenticated();
    }

    match /system_logs/{logId} {
      allow read, write: if isAuthenticated();
    }

    // FALLBACK RULE - Allow any authenticated user to access any collection
    // This is very open for development purposes
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
