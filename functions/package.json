{
  "name": "@fitness-app/functions",
  "version": "0.1.0",
  "private": true,
  "description": "Firebase Cloud Functions for FitnessApp",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf lib .turbo node_modules"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@trpc/server": "^10.45.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.1",
    "zod": "^3.22.4",
    "@fitness-app/shared": "workspace:*"
  },
  "devDependencies": {
    "@fitness-app/eslint-config": "workspace:*",
    "@types/node": "^20.11.24",
    "eslint": "^8.57.0",
    "firebase-functions-test": "^3.1.1",
    "typescript": "^5.4.2"
  }
}
